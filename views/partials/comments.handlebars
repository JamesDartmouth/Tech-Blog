<div class="comments">
  {{#each this}}
    <div class="card">
        <h3 class="card-header"></h3>
        <section class="comment card-body">
            <div class="comment-text">
                {{comment_text}}
            </div>
            <div class="comment-author">
                -{{user.username}}, {{format_date date_created}}
            </div>
        </section>
    </div>
  {{/each}}
</div>
